                    "data"
                  ],
                  "properties": {
                    "status": {
                      "type": "integer",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Request for reset password was succesfully sent to user email"
                    },
                    "data": {
                      "type": "object"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "$ref": "#/components/responses/404"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    },
    "schemas": {
      "contact": {
        "type": "object",
        "required": [
          "_id",
          "name",
          "phoneNumber",
          "contactType",
          "userId"
        ],
        "properties": {
          "_id": {
            "description": "Contact's id",
            "type": "string",
            "example": "66b28507c5bf28b2ded9ce20"
          },
          "name": {
            "description": "Contact's name",
            "type": "string",
            "example": "Mike Tyson"
          },
          "phoneNumber": {
            "description": "Contact's phone number",
            "type": "string",
            "example": "+38097000001"
          },
          "contactType": {
            "description": "Contact's type",
            "type": "string",
            "enum": [
              "work",
              "home",
              "personal"
            ],
            "example": "personal",
            "default": "personal"
          },
          "userId": {
            "description": "Parent's id",
            "type": "string",
            "example": "66b28507c5bf28b2ded9ce20"
          }
        }
      },
      "auth": {
        "type": "object",
        "required": [
          "_id",
          "name",
          "email",
          "password"
        ],
        "properties": {
          "_id": {
            "description": "User's id",
            "type": "string",
            "example": "66b28507c5bf28b2ded9ce20"
          },
          "name": {
            "description": "User's name",
            "type": "string",
            "example": "Mike Tyson"
          },
          "email": {
            "description": "User's email",
            "type": "string",
            "example": "mtyson@gmail.com"
          },
          "password": {
            "description": "User's password",
            "type": "string",
            "example": "54dfgvd57a!q"
          },
          "createdAt": {
            "description": "The data of created a new user",
            "type": "string",
            "example": "2024-08-10T22:12:51.663Z"
          },
          "updatedAt": {
            "description": "The data of updated a new user",
            "type": "string",
            "example": "2024-08-12T10:24:07.613Z"
          }
        }
      }
    },
    "responses": {
      "401": {
        "description": "Unauthorized error",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "status",
                "message",
                "data"
              ],
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 401
                },
                "message": {
                  "type": "string",
                  "example": "UnauthorizedError"
                },
                "data": {
                  "type": "object",
                  "required": [
                    "message"
                  ],
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Access token expired"
                    }
                  }
                }
              }
            }
          }
        }
      },
      "404": {
        "description": "Contact not found",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "required": [
                "status",
                "message",
                "data"
              ],
              "properties": {
                "status": {
                  "type": "integer",
                  "example": 404
                },
                "message": {
                  "type": "string",
                  "example": "Contact not found"
                },
                "data": {
                  "type": "object",
                  "required": [
                    "message"
                  ],
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Contact not found"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}